<?xml version="1.0" encoding="UTF-8"?>

<project name="MPR" default="dist" basedir=".">


<property name="src" location="src"/>
<property name="build" location="build"/>
<property name="dist" location="dist"/>

<target name="init">
<tstamp />
<mkdir dir="${build}" />
<mkdir dir="${dist}" />
</target>

<target name="compile" depends="init">
<javac srcdir="${src}" destdir="${build}"/>
</target>

<target name="dist" depends="compile">
<mkdir dir="${dist}/lib"/>
</target>

<target name="jar" depends="dist">
<jar jarfile="${dist}/lib/MPR-${DSTAMP}.jar" basedir="${build}"/>
</target>

<target name="clean">
<delete dir="${build}">
</delete>
<delete dir="${dist}">
</delete>
</target>
</project>